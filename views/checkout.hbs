<!doctype html>
<html lang="en">

<head>
    <title> Check-out </title>

    <link rel="shortcut icon" href="/images/mini-logo.png" type="image/icon type">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script src="/js/validator.min.js" type="text/javascript"></script>
    <script src="/js/checkout.js" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/buttons.css">
    <link rel="stylesheet" type="text/css" href="/css/checkout.css">
</head>

<body>
    {{> guestnavbar flag=flag userID=userID}}

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <br/>
                <!-- Delivery Details -->
                <div class="card">
                    <div class="card-body">
                        <form name="Form" id="form" target="_blank">
                            <div align="left" class="form-group">
                                <h1> Delivery details </h1>
                            </div>
                            <div align="left" class="form-group">
                                <h6> <b> Delivery time: </b> 30mins </h6>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Date</label>
                                </div>
                                <input type="date" class="form-control" id="today" name="date" style="width: 60%">
                                <div> </div>
                            </div>
                            <div align="left" class="form-group">
                                <h6> <b> Delivery address: </b>  </h6>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputAddress" value="{{location}}" required>
                            </div>
                        </form>
                    </div>
                </div>
                <br/>
                <!-- Personal Information -->
                <div class="card">
                    <div class="card-body">
                        <form name="Form" id="form" target="_blank">
                            <div align="left" class="form-group">
                                <h1> Personal Information </h1>
                            </div>
                            <div align="left" class="form-group">
                                <h6> <b> Email Address: </b> </h6>
                                <h6> {{email}} </h6>
                            </div>
                            <div id="con" align="left" class="form-group">
                                <div id="edit">
                                    <h6> <b> Mobile Number: </b> </h6>
                                    <h6 id="orderContact"> {{contactNo}} </h6>
                                </div>
                                <h6 class="edit"> 
								<button type="button" align="right" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#orderplaced">
									Edit
								</button> 	
							</div>

							<!-- Modal -->
							{{> editnum}}					
						</form>
					</div>
				</div>
				<br/>
				<!-- Payment Reminders -->
				<div class="card">
					<div class="card-body">
						<form name="Form" id="form" target="_blank" >
							<div align="left" class="form-group">
								<h1> Payment Reminders </h1>
							</div>
							<div align="left" class="form-group">
								<h6> <b> Cash on Delivery </b> </h6>
                                <h6> Simply pay the driver, when he delivers the food to your doorstep. </h6>
                                <h6> Please enter how much you will be paying. </h6>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">PHP</span>
                                </div>
                                <input type="number" name="payment" id="payment" class="form-control" min={{allTotal}} required>
                            </div>

                            <button type="button" class="btn btn-primary btn-block" id="placeOrder">
                                Place Order
                            </button>

                            <!-- Modal -->
                            {{> placeorder_modals}}

                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card sticky" style="background-color:#c4c0c0; margin-top:25px;">
                    <div class="card-body">
                        <form name="Form" id="form" target="_blank">
                            <div align="left" class="form-group">
                                <h1> Order Summary </h1>
                            </div>
                            <div name="topPortion" style="text-align: center;">
                                {{#each items}}
                                <div class="row">
                                    <div class="col-lg-2">
                                        <b>{{quantity}}</b>
                                    </div>
                                    <div class="col-lg-2">
                                        x
                                    </div>
                                    <div class="col-lg-3">
                                        {{menuName}}
                                    </div>
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-lg-3">
                                        PHP {{total}}
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            <hr/>
                            <br/>
                            <div name="bottomPortion">
                                <div class="row">
                                    <div class="col-lg-6" style="text-align: left;">
                                        Subtotal
                                        <br/> Delivery Fee
                                        <br/>
                                        <b>Total</b>(incl. VAT)
                                        <br/>
                                        <br/>
                                    </div>
                                    <div class="col-lg-6" style="text-align: right;">
                                        PHP {{allTotal}}
                                        <br/> PHP 0.00
                                        <br/>
                                        <b>PHP {{allTotal}}</b>
                                        <br/>
                                        <br/>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <br/>
    <br/>
    <br/>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>

</html>